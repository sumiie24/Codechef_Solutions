#include <iostream>
using namespace std;

int main(){

    int t,n,a=0,b=0,z=0;
    cin>>t;
    while(t--){
           int c=0;
        cin>>n;
        for(int i=0;i<n;i++){
            cin>>a>>b;
            z=b-a;
            if(z>5){
                c++;
            }
        }

    cout<<c<<endl;
    }


return 0;
}
